{% extends 'base.html.twig' %}
{% form_theme formCreationPhoto 'bootstrap_4_layout.html.twig' %}

{% block title %}Ajout d'image
{% endblock %}

{% block body %}
    <style>
        .form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 60px;
            margin-bottom: 80px;

        }
        .espacer {
            margin-bottom: 30px;
        }
        .centrer {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 30px;


        }
    </style>
    <div class="form">
        <h1>Ajout d'image</h1>
        {{ form_start(formCreationPhoto) }}
        <div class="espacer">
            {{ form_row(formCreationPhoto.nom) }}
        </div>
        <div class="espacer">
            <div class="centrer">
                {{ form_row(formCreationPhoto.enregistrer) }}
            </div>
        </div>
        {{ form_end(formCreationPhoto) }}
    </div>
{% endblock %}
